<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gaji"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.amin.al_khaida.m.quiz2.Gaji">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gaji Karyawan!"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <TextView
        android:id="@+id/textNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama"
        android:layout_below="@id/textNama"
        android:id="@+id/editNama" />

    <TextView
        android:id="@+id/textJabatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jabatan"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/editNama"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jabatan"
        android:layout_below="@id/textJabatan"
        android:id="@+id/editJabatan" />
    <TextView
        android:id="@+id/textTunjangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tunjangan"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/editJabatan"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tunjangan"
        android:layout_below="@id/textTunjangan"
        android:id="@+id/editTunjangan" />
    <TextView
        android:id="@+id/textPajak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pajak"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/editTunjangan"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pajak"
        android:layout_below="@id/textPajak"
        android:id="@+id/editPajak" />
    <TextView
        android:id="@+id/textGapok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gaji Pokok"
        android:layout_below="@+id/editPajak"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gaji Pokok"
        android:layout_below="@id/textGapok"
        android:id="@+id/editGapok" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnButton"
        android:text="kembali"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp" />






</RelativeLayout>
